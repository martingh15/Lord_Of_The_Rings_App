                android:text="@string/answerSixC" />

            <CheckBox
                android:id="@+id/CheckBoxSixD"
                style="@style/AnswerText"
                android:text="@string/answerSixD" />
        </LinearLayout>

        <TextView
            style="@style/QuestionText"
            android:text="@string/questionSeven" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioGroupQuestion7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/RadioButtonSevenA"
                    style="@style/AnswerText"
                    android:layout_marginRight="20dp"
                    android:text="@string/answerSevenA" />

                <RadioButton
                    android:id="@+id/RadioButtonSevenB"
                    style="@style/AnswerText"
                    android:text="@string/answerSevenB" />

            </RadioGroup>


        </LinearLayout>


        <TextView
            style="@style/QuestionText"
            android:text="@string/questionEight" />

        <LinearLayout
            style="@style/AnswerText"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroupQuestion8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/RadioButtonEightA"
