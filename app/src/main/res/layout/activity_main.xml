                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/RadioButtonTenA"
                    style="@style/AnswerText"
                    android:text="@string/answerTenA" />

                <RadioButton
                    android:id="@+id/RadioButtonTenB"
                    style="@style/AnswerText"
                    android:text="@string/answerTenB" />

                <RadioButton
                    android:id="@+id/RadioButtonTenC"
                    style="@style/AnswerText"
                    android:text="@string/answerTenC" />

                <RadioButton
                    android:id="@+id/RadioButtonTenD"
                    style="@style/AnswerText"
                    android:text="@string/answerTenD" />


            </RadioGroup>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/buttonText"
            android:onClick="validateAnswers"
            android:textColor="#000000" />

    </LinearLayout>

</ScrollView>