                    android:text="@string/answerEightB" />

                <RadioButton
                    android:id="@+id/RadioButtonEightC"
                    style="@style/AnswerText"
                    android:text="@string/answerEightC" />

                <RadioButton
                    android:id="@+id/RadioButtonEightD"
                    style="@style/AnswerText"
                    android:text="@string/answerEightD" />

            </RadioGroup>


        </LinearLayout>

        <TextView
            style="@style/QuestionText"
            android:text="@string/questionNine" />

        <EditText
            android:id="@+id/EditTextQuestion9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/number"
            android:textColor="#BDBDBD" />

        <TextView
