<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5E1A5"
    tools:context="com.example.android.lotr.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <TextView
            style="@style/QuestionText"
            android:text="@string/questionOne" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroupQuestion1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/RadioButtonOneA"
                    style="@style/AnswerText"
                    android:text="@string/answerOneA" />

                <RadioButton
                    android:id="@+id/RadioButtonOneB"
                    style="@style/AnswerText"
                    android:text="@string/answerOneB" />

                <RadioButton
                    android:id="@+id/RadioButtonOneC"
                    style="@style/AnswerText"
                    android:text="@string/answerOneC" />

                <RadioButton
                    android:id="@+id/RadioButtonOneD"
                    style="@style/AnswerText"
                    android:text="@string/answerOneD" />

            </RadioGroup>

        </LinearLayout>

        <TextView
            style="@style/QuestionText"
            android:text="@string/questionTwo" />

        <LinearLayout
            style="@style/AnswerText"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroupQuestion2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/RadioButtonTwoA"
                    style="@style/AnswerText"
                    android:text="@string/answerTwoA" />

                <RadioButton
                    android:id="@+id/RadioButtonTwoB"
                    style="@style/AnswerText"
                    android:text="@string/answerTwoB" />

                <RadioButton
                    android:id="@+id/RadioButtonTwoC"
                    style="@style/AnswerText"
                    android:text="@string/answerTwoC" />

                <RadioButton
                    android:id="@+id/RadioButtonTwoD"
                    style="@style/AnswerText"
                    android:text="@string/answerTwoD" />

            </RadioGroup>
        </LinearLayout>

        <TextView
            style="@style/QuestionText"
            android:text="@string/questionThree" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroupQuestion3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/RadioButtonThreeA"
                    style="@style/AnswerText"
                    android:text="@string/answerThreeA" />

                <RadioButton
                    android:id="@+id/RadioButtonThreeB"
                    style="@style/AnswerText"
                    android:text="@string/answerThreeB" />

                <RadioButton
                    android:id="@+id/RadioButtonThreeC"
                    style="@style/AnswerText"
                    android:text="@string/answerThreeC" />

                <RadioButton
                    android:id="@+id/RadioButtonThreeD"
                    style="@style/AnswerText"
                    android:text="@string/answerThreeD" />

            </RadioGroup>
        </LinearLayout>

        <TextView
            style="@style/QuestionText"
            android:text="@string/questionFour" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroupQuestion4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/RadioButtonFourA"
                    style="@style/AnswerText"
                    android:text="@string/answerFourA" />

                <RadioButton
                    android:id="@+id/RadioButtonFourB"
                    style="@style/AnswerText"
                    android:text="@string/answerFourB" />

                <RadioButton
                    android:id="@+id/RadioButtonFourC"
                    style="@style/AnswerText"
                    android:text="@string/answerFourC" />

                <RadioButton
                    android:id="@+id/RadioButtonFourD"
                    style="@style/AnswerText"
                    android:text="@string/answerFourD" />

            </RadioGroup>


        </LinearLayout>

        <TextView
            style="@style/QuestionText"
            android:text="@string/questionFive" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroupQuestion5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/RadioButtonFiveA"
                    style="@style/AnswerText"
                    android:text="@string/answerFiveA" />

                <RadioButton
                    android:id="@+id/RadioButtonFiveB"
                    style="@style/AnswerText"
                    android:text="@string/answerFiveB" />

                <RadioButton
                    android:id="@+id/RadioButtonFiveC"
                    style="@style/AnswerText"
                    android:text="@string/answerFiveC" />

                <RadioButton
                    android:id="@+id/RadioButtonFiveD"
                    style="@style/AnswerText"
                    android:text="@string/answerFiveD" />

            </RadioGroup>


        </LinearLayout>

        <TextView
            style="@style/QuestionText"
            android:text="@string/questionSix" />

        <LinearLayout
            style="@style/AnswerText"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/CheckBoxSixA"
                style="@style/AnswerText"
                android:text="@string/answerSixA" />

            <CheckBox
                android:id="@+id/CheckBoxSixB"
                style="@style/AnswerText"
                android:text="@string/answerSixB" />

